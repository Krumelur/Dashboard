{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "clean all",
			"command": "dotnet",
			"args": [
				"clean"
			],
			"type": "process",
            "group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/src"
			}
        },
		{
			"label": "build Models",
			"command": "dotnet",
			"args": [
				"build",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
            "dependsOn": "clean",
            "group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/src/Models"
			}
        },
        {
			"label": "build Sources",
			"command": "dotnet",
			"args": [
				"build",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
            "dependsOn": "clean",
            "group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/src/Server/Sources"
			}
        },
        {
			"label": "build Harvester",
			"command": "dotnet",
			"args": [
				"build",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"type": "process",
            "dependsOn": "clean",
            "group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/src/Server/Harvester"
			}
		},
		{
			"label": "func",
			"type": "func",
			"dependsOn": "build Harvester",
			"options": {
				"cwd": "${workspaceFolder}/src/Server/Harvester/bin/Debug/netcoreapp3.1"
			},
			"command": "host start",
			"isBackground": true,
			"problemMatcher": "$func-watch"
		}
	]
}