<Card class="card-datapoint">
	<Container>
		<Row style="height:50px;">
			<Column ColumnSize="ColumnSize.Is7" class="my-auto">
				<Text Alignment="TextAlignment.Left">
					@Label
				</Text>
			</Column>
			<Column ColumnSize="ColumnSize.Is5" class="my-auto">
				<Text Alignment="TextAlignment.Right">
					@ChildContent
				</Text>
			</Column>
		</Row>
	</Container>
</Card>

@code
{
	[Parameter]
	public string Label { get; set; }

	[Parameter]
 	public RenderFragment ChildContent { get; set; }
}