@inherits BaseSourceCard

<SourceCard TitleLeft="Tesla" TitleRight="@TimeStampSource">
	<Row Gutter="(0, 10)">
		<Column>
			<DataItemTwoCols Label="Ladezustand">
				<svg width="100" height="50">
					<BatteryIconSVG ChargeLevel="@ChargeLevelPercent"/>
				</svg>
			</DataItemTwoCols>
		</Column>
	</Row>
	
	<Row Gutter="(0, 10)">
		<Column>
			<DataItemTwoCols Label="Innentemperatur">
				@CarTemperature
			</DataItemTwoCols>
		</Column>
	</Row>
	
	<Row>
		<Column>
			<div id="bingMap" style='position:relative;width:100%;height:400px;border-radius:5px;'></div>
		</Column>
	</Row>
	
	<Button Color="Color.Primary" @onclick="HandleRefreshClick">Refresh</Button>
</SourceCard>